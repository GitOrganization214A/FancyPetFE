<!--index.wxml-->
<view class="container">
  <view wx:if="{{canIUseOpenData}}" class="userinfo" >
    <view class="avatarimg">
        <view>
            <image wx:if="{{avatarUrl.length>0}}" src="{{avatarUrl}}" style="width: 200rpx; height: 200rpx; display: inline-block; box-sizing: border-box; position: relative; left: 20rpx; top: -200rpx"></image>
        </view>       
    </view>
    <view class="avatartext">
        <view class="infotext" style="position: relative; left: 100rpx; top: -120rpx; font-size: 20px;">
            <input type="nickname" placeholder="请输入昵称" name="nickname" bindchange="getUserNickname"/>
        </view>
        <view>
            <text decode style="color: black; font-weight: 1000; position: relative; left: 100rpx; top: -80rpx; font-size: 14px;">
                关注：{{follow}}  &ensp;  粉丝：{{fans}}  &ensp; 发帖：{{atcnum}}
            </text>   
        </view>
        <view  class="infobtn">
            <button bindchooseavatar="getUserAvatar" open-type="chooseAvatar" style="position: relative; left: -280rpx; top: -140rpx; width: 200rpx; height: 60rpx; display: block; box-sizing: border-box;font-size: 8px;"> 设置头像 </button>
        </view>
        <view>
            
        </view>
    </view>
  </view>
  <block wx:else>
      <image wx:if="{{bgUrl.length>0}}" src="{{bgUrl}}" style="width: 748rpx; height: 1177rpx; display: block; box-sizing: border-box; position: relative; left: -5rpx; top: -200rpx"></image>
      <image wx:if="{{LogoUrl.length>0}}" src="{{LogoUrl}}" style="width: 153rpx; height: 153rpx; display: block; box-sizing: border-box; position: relative; left: -165rpx; top: -1268rpx; border: 6rpx solid black"></image>
      <view>
            <text style="color: black; font-weight: 1000; position: relative; left: 132rpx; top: -1366rpx; font-size: 15px; font-family: Arial, Helvetica, sans-serif">
                —— FancyPet ——
            </text>
            <text style="color: black; font-weight: 1000; position: relative; left: 207rpx; top: -1623rpx; font-size: 40px; font-family: 楷体">
                奇宠
            </text>
      </view>
      <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile" style="position: relative; left: 2rpx; top: -1491rpx; width: 300rpx; height: 94rpx; display: block; box-sizing: border-box" type="default"> 微信登录 </button>
  </block>
  
</view>
